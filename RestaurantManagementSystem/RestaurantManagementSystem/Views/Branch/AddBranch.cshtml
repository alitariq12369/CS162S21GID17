<div class="containers">
    <div class=" right-container">
        <form action="" align="center">
            <h2> Add a Restaurant Branch </h2>
            <div class="name">
                <input type="text" class="name" placeholder="Name" id="BranchName">
            </div>



            <button class="submit" onclick="save()" type="submit"> Add</button>
            <button class="cancel" type="cancel">Cancel</button>
        </form>
    </div>
</div>









@section scripts{
    <script>
        function save() {
            var branch = document.getElementById("BranchName").value;



            var obj = {

                Name: branch,
               
            };

            var data = JSON.stringify(obj);
            console.log(data);




            $.ajax({
                url: "https://localhost:44355/RestaurantAPI/Branch/AddBranch",
                type: 'POST',
                data: JSON.stringify(obj),
                contentType: "application/json;charset=utf-8",
                success: function (data) {
                    alert(data);
                    alert("Branch Added Sucessfully");
                },
                error: function (data) {
                }
            });

            //	window.location = "";

        }
    </script>

}




